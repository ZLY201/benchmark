{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "target": "ES6",
    "outDir": "dist",
    "module": "commonJs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "plugins": [
    {
      "transform": "ts-transform-paths",
      "afterDeclarations": true
    }
  ],
  "files": ["./src/index.ts"]
}
